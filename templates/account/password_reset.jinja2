{# Allauth - Password Reset Template #}
{% extends "website/base.jinja2" %}

{% block title %}{% trans %}Reimposta Password{% endtrans %}{% endblock %}

{% block content %}
<div style="max-width: 400px; margin: 0 auto;">
    <div class="card">
        <div class="card-body">
            <h1 style="color: var(--blu-nautico); margin-bottom: 1.5rem; text-align: center;">
                {% trans %}Reimposta Password{% endtrans %}
            </h1>
            
            <p style="margin-bottom: 1.5rem; color: var(--gray-800);">
                {% trans %}Inserisci la tua email e ti invieremo un link per reimpostare la password.{% endtrans %}
            </p>
            
            {% if form.errors %}
            <div style="background: #f8d7da; color: #721c24; padding: 1rem; border-radius: 4px; margin-bottom: 1rem;">
                {% for field in form %}
                    {% for error in field.errors %}
                        <p>{{ error }}</p>
                    {% endfor %}
                {% endfor %}
            </div>
            {% endif %}
            
            <form method="post" action="{{ url('account_reset_password') }}">
                {% csrf_token %}
                
                <div class="form-group">
                    <label class="form-label" for="id_email">{% trans %}Email{% endtrans %}</label>
                    <input type="email" id="id_email" name="email" class="form-control" required autofocus>
                </div>
                
                <button type="submit" class="btn btn-primary" style="width: 100%;">
                    {% trans %}Invia link{% endtrans %}
                </button>
            </form>
            
            <hr style="margin: 1.5rem 0;">
            
            <p style="text-align: center;">
                <a href="{{ url('account_login') }}">{% trans %}Torna al login{% endtrans %}</a>
            </p>
        </div>
    </div>
</div>
{% endblock %}
