{# Allauth - Password Change Template #}
{% extends "website/base.jinja2" %}

{% block title %}{% trans %}Cambia Password{% endtrans %}{% endblock %}

{% block content %}
<div style="max-width: 400px; margin: 0 auto;">
    <div class="card">
        <div class="card-body">
            <h1 style="color: var(--blu-nautico); margin-bottom: 1.5rem; text-align: center;">
                {% trans %}Cambia Password{% endtrans %}
            </h1>
            
            {% if form.errors %}
            <div style="background: #f8d7da; color: #721c24; padding: 1rem; border-radius: 4px; margin-bottom: 1rem;">
                {% for field in form %}
                    {% for error in field.errors %}
                        <p><strong>{{ field.label }}:</strong> {{ error }}</p>
                    {% endfor %}
                {% endfor %}
            </div>
            {% endif %}
            
            <form method="post" action="{{ url('account_change_password') }}">
                {% csrf_token %}
                
                <div class="form-group">
                    <label class="form-label" for="id_oldpassword">{% trans %}Password attuale{% endtrans %}</label>
                    <input type="password" id="id_oldpassword" name="oldpassword" class="form-control" required>
                </div>
                
                <div class="form-group">
                    <label class="form-label" for="id_password1">{% trans %}Nuova Password{% endtrans %}</label>
                    <input type="password" id="id_password1" name="password1" class="form-control" required>
                </div>
                
                <div class="form-group">
                    <label class="form-label" for="id_password2">{% trans %}Conferma nuova password{% endtrans %}</label>
                    <input type="password" id="id_password2" name="password2" class="form-control" required>
                </div>
                
                <button type="submit" class="btn btn-primary" style="width: 100%;">
                    {% trans %}Cambia Password{% endtrans %}
                </button>
            </form>
        </div>
    </div>
</div>
{% endblock %}
