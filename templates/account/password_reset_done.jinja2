{# Allauth - Password Reset Done Template #}
{% extends "website/base.jinja2" %}

{% block title %}{% trans %}Email Inviata{% endtrans %}{% endblock %}

{% block content %}
<div style="max-width: 400px; margin: 0 auto;">
    <div class="card">
        <div class="card-body" style="text-align: center;">
            <div style="font-size: 4rem; margin-bottom: 1rem;">✉️</div>
            
            <h1 style="color: var(--blu-nautico); margin-bottom: 1rem;">
                {% trans %}Controlla la tua email{% endtrans %}
            </h1>
            
            <p style="color: var(--gray-800);">
                {% trans %}Ti abbiamo inviato un'email con le istruzioni per reimpostare la password.{% endtrans %}
            </p>
            
            <a href="{{ url('account_login') }}" class="btn btn-primary" style="margin-top: 1.5rem;">
                {% trans %}Torna al login{% endtrans %}
            </a>
        </div>
    </div>
</div>
{% endblock %}
