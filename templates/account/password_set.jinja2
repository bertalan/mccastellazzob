{# Allauth - Set Password (for social login users) #}
{% extends "website/base.jinja2" %}

{% block title %}{% trans %}Imposta Password{% endtrans %}{% endblock %}

{% block content %}
<div style="max-width: 400px; margin: 0 auto;">
    <div class="card">
        <div class="card-body">
            <h1 style="color: var(--blu-nautico); margin-bottom: 1.5rem; text-align: center;">
                {% trans %}Imposta Password{% endtrans %}
            </h1>
            
            <p style="color: var(--gray-800); margin-bottom: 1.5rem;">
                {% trans %}Non hai ancora una password impostata. Creane una per accedere con username e password.{% endtrans %}
            </p>
            
            {% if form.errors %}
            <div style="background: #f8d7da; color: #721c24; padding: 1rem; border-radius: 4px; margin-bottom: 1rem;">
                {% for field in form %}
                    {% for error in field.errors %}
                        <p>{{ error }}</p>
                    {% endfor %}
                {% endfor %}
            </div>
            {% endif %}
            
            <form method="post">
                {% csrf_token %}
                
                <div class="form-group">
                    <label class="form-label" for="id_password1">{% trans %}Password{% endtrans %}</label>
                    <input type="password" id="id_password1" name="password1" class="form-control" required>
                </div>
                
                <div class="form-group">
                    <label class="form-label" for="id_password2">{% trans %}Conferma Password{% endtrans %}</label>
                    <input type="password" id="id_password2" name="password2" class="form-control" required>
                </div>
                
                <button type="submit" class="btn btn-primary" style="width: 100%;">
                    {% trans %}Imposta Password{% endtrans %}
                </button>
            </form>
        </div>
    </div>
</div>
{% endblock %}
