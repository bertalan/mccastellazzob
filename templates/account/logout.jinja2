{# Allauth - Logout Template #}
{% extends "website/base.jinja2" %}

{% block title %}{% trans %}Esci{% endtrans %}{% endblock %}

{% block content %}
<div style="max-width: 400px; margin: 0 auto;">
    <div class="card">
        <div class="card-body" style="text-align: center;">
            <h1 style="color: var(--blu-nautico); margin-bottom: 1.5rem;">
                {% trans %}Esci{% endtrans %}
            </h1>
            
            <p style="margin-bottom: 1.5rem;">
                {% trans %}Sei sicuro di voler uscire?{% endtrans %}
            </p>
            
            <form method="post" action="{{ url('account_logout') }}">
                {% csrf_token %}
                <button type="submit" class="btn btn-amaranto">
                    {% trans %}Esci{% endtrans %}
                </button>
                <a href="/" class="btn btn-secondary" style="margin-left: 1rem; border-color: var(--blu-nautico); color: var(--blu-nautico);">
                    {% trans %}Annulla{% endtrans %}
                </a>
            </form>
        </div>
    </div>
</div>
{% endblock %}
