{# MC Castellazzo - Base Template Jinja2 - Stile Moderno #}
<!DOCTYPE html>
<html lang="{{ request.LANGUAGE_CODE }}">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    {# Usa wagtailseo per nome organizzazione, fallback su site name #}
    <title>{% block title %}{{ page.title }}{% endblock %} | {{ settings.wagtailseo.SeoSettings.struct_org_name or request.site.site_name }}</title>
    
    {# Costruisci dizionario traduzioni pagina #}
    {% set translations_dict = {} %}
    {% if page is defined and page.get_translations is defined %}
        {% for translated_page in page.get_translations(inclusive=true) %}
            {% set _ = translations_dict.update({translated_page.locale.language_code: translated_page.url}) %}
        {% endfor %}
    {% endif %}
    
    {# hreflang per SEO multilingua #}
    {% for lang_code, lang_url in translations_dict.items() %}
    <link rel="alternate" hreflang="{{ lang_code }}" href="{{ lang_url }}" />
    {% endfor %}
    {% if translations_dict %}
    <link rel="alternate" hreflang="x-default" href="{{ translations_dict.get('it', page.full_url) }}" />
    {% endif %}
    
    {# SEO Meta Description #}
    <meta name="description" content="{% block meta_description %}{{ page.search_description or _('Moto Club Castellazzo Bormida - Dal 1933, passione su due ruote nel cuore del Piemonte') }}{% endblock %}">
    
    {# Open Graph / Social Meta #}
    <meta property="og:title" content="{{ page.seo_title or page.title }}" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="{{ page.full_url }}" />
    {% if page.og_image or settings.wagtailseo.SeoSettings.og_image_default %}
    <meta property="og:image" content="{{ (page.og_image or settings.wagtailseo.SeoSettings.og_image_default).get_rendition('fill-1200x630').url }}" />
    {% endif %}
    
    {# Schema.org JSON-LD - Custom per pagine con JsonLdMixin #}
    {% if page.get_json_ld is defined %}
    <script type="application/ld+json">
    {{ page.get_json_ld() }}
    </script>
    {% endif %}
    
    {# Tailwind CSS #}
    <script src="https://cdn.tailwindcss.com"></script>
    
    {# Fonts #}
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;600;700;900&family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    {# Font Awesome #}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    
    {# AOS Animate #}
    <link rel="stylesheet" href="https://unpkg.com/aos@2.3.1/dist/aos.css">
    
    {# Leaflet CSS per mappe #}
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        'gold': '#ffd700',
                        'gold-dark': '#f6c401',
                        'bordeaux': '#ab0031',
                        'navy': '#1B263B',
                        'navy-light': '#2D3E5C',
                        'amaranth': '#9B1D64',
                        'amaranth-dark': '#7A164F',
                        'cream': '#FEFCF6',
                        'warm-gray': '#F5F3EE',
                    },
                    fontFamily: {
                        'heading': ['Montserrat', 'sans-serif'],
                        'body': ['Inter', 'sans-serif'],
                    },
                }
            }
        }
    </script>
    
    <style>
        * { font-family: 'Inter', sans-serif; }
        h1, h2, h3, h4, h5, h6 { font-family: 'Montserrat', sans-serif; }
        
        .sr-only {
            position: absolute;
            width: 1px;
            height: 1px;
            padding: 0;
            margin: -1px;
            overflow: hidden;
            clip: rect(0, 0, 0, 0);
            white-space: nowrap;
            border: 0;
        }
        .sr-only:focus, .focus\:not-sr-only:focus {
            position: fixed;
            top: 10px;
            left: 10px;
            width: auto;
            height: auto;
            padding: 1rem 2rem;
            margin: 0;
            overflow: visible;
            clip: auto;
            white-space: normal;
            background: #D4AF37;
            color: #1B263B;
            font-weight: bold;
            z-index: 9999;
            border-radius: 8px;
        }
        
        *:focus-visible {
            outline: 3px solid #D4AF37;
            outline-offset: 2px;
        }
        
        .card-hover {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        .card-hover:hover {
            transform: translateY(-8px);
            box-shadow: 0 20px 40px rgba(27, 38, 59, 0.15);
        }
        
        .line-clamp-2 {
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }
        
        /* Language Switcher */
        .lang-flag {
            font-size: 1.5rem;
            line-height: 1;
            display: inline-block;
            vertical-align: middle;
        }
        
        .lang-switcher-btn {
            min-width: 44px;
            min-height: 44px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            touch-action: manipulation;
        }
        
        .lang-dropdown {
            position: absolute;
            right: 0;
            top: 100%;
            margin-top: 0.5rem;
            background: white;
            border-radius: 0.5rem;
            box-shadow: 0 10px 40px rgba(27, 38, 59, 0.15);
            opacity: 0;
            visibility: hidden;
            transform: translateY(-10px);
            transition: all 0.3s ease;
            z-index: 1000;
            min-width: 200px;
        }
        
        .lang-dropdown.active {
            opacity: 1;
            visibility: visible;
            transform: translateY(0);
        }
        
        .lang-option {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            padding: 0.75rem 1rem;
            min-height: 44px;
            transition: background 0.2s ease;
        }
        
        .lang-option:hover,
        .lang-option:focus {
            background: #FEFCF6;
        }
        
        .lang-option.active {
            background: #1B263B;
            color: white;
        }
        
        .lang-option.active .lang-name {
            font-weight: 600;
        }
        
        .lang-name {
            flex: 1;
            font-size: 0.875rem;
        }
        
        @media (max-width: 1023px) {
            .lang-switcher-mobile {
                display: grid;
                grid-template-columns: repeat(5, 1fr);
                gap: 0.5rem;
            }
            
            .lang-switcher-mobile .lang-option {
                flex-direction: column;
                text-align: center;
                padding: 0.75rem 0.5rem;
                border-radius: 0.5rem;
                background: #F5F3EE;
                gap: 0.25rem;
            }
            
            .lang-switcher-mobile .lang-option.active {
                background: #1B263B;
            }
            
            .lang-switcher-mobile .lang-flag {
                font-size: 1.75rem;
            }
            
            .lang-switcher-mobile .lang-name {
                font-size: 0.625rem;
                text-transform: uppercase;
                letter-spacing: 0.05em;
            }
        }
        
        /* ==========================================
           Prose - Rich Text Content Styling
           Formattazione per contenuti dal CMS
           ========================================== */
        .prose {
            color: #374151;
            line-height: 1.75;
        }
        
        .prose h1, .prose h2, .prose h3, .prose h4, .prose h5, .prose h6 {
            color: #1B263B;
            font-family: 'Montserrat', sans-serif;
            font-weight: 700;
            line-height: 1.3;
            margin-top: 1.5em;
            margin-bottom: 0.75em;
        }
        
        .prose h1:first-child, .prose h2:first-child, .prose h3:first-child,
        .prose h4:first-child, .prose h5:first-child, .prose h6:first-child {
            margin-top: 0;
        }
        
        .prose h1 { font-size: 2.25rem; }
        .prose h2 { font-size: 1.875rem; }
        .prose h3 { font-size: 1.5rem; }
        .prose h4 { font-size: 1.25rem; }
        .prose h5 { font-size: 1.125rem; }
        .prose h6 { font-size: 1rem; }
        
        .prose p {
            margin-top: 1.25em;
            margin-bottom: 1.25em;
        }
        
        .prose p:first-child { margin-top: 0; }
        .prose p:last-child { margin-bottom: 0; }
        
        .prose a {
            color: #ab0031;
            text-decoration: underline;
            text-underline-offset: 3px;
            font-weight: 500;
            transition: color 0.2s ease;
        }
        
        .prose a:hover { color: #f6c401; }
        
        .prose strong, .prose b {
            color: #1B263B;
            font-weight: 600;
        }
        
        .prose em, .prose i { font-style: italic; }
        
        .prose ul, .prose ol {
            margin-top: 1.25em;
            margin-bottom: 1.25em;
            padding-left: 1.625em;
        }
        
        .prose ul { list-style-type: disc; }
        .prose ol { list-style-type: decimal; }
        
        .prose li {
            margin-top: 0.5em;
            margin-bottom: 0.5em;
        }
        
        .prose li::marker { color: #ab0031; }
        
        .prose ul ul, .prose ol ol, .prose ul ol, .prose ol ul {
            margin-top: 0.5em;
            margin-bottom: 0.5em;
        }
        
        .prose blockquote {
            margin-top: 1.5em;
            margin-bottom: 1.5em;
            padding: 1em 1.5em;
            border-left: 4px solid #ffd700;
            font-style: italic;
            color: #374151;
            background-color: #F9FAFB;
            border-radius: 0.5rem;
        }
        
        .prose blockquote p { margin: 0; }
        
        .prose hr {
            margin-top: 2em;
            margin-bottom: 2em;
            border: 0;
            border-top: 2px solid #E5E7EB;
        }
        
        .prose img {
            margin-top: 1.5em;
            margin-bottom: 1.5em;
            border-radius: 1rem;
            max-width: 100%;
            height: auto;
        }
        
        .prose figure {
            margin-top: 1.5em;
            margin-bottom: 1.5em;
        }
        
        .prose figcaption {
            font-size: 0.875rem;
            color: #6B7280;
            margin-top: 0.5em;
            text-align: center;
        }
        
        .prose table {
            width: 100%;
            margin-top: 1.5em;
            margin-bottom: 1.5em;
            border-collapse: collapse;
            font-size: 0.875rem;
        }
        
        .prose thead { border-bottom: 2px solid #D1D5DB; }
        
        .prose th {
            font-weight: 600;
            color: #1B263B;
            text-align: left;
            padding: 0.75em 1em;
        }
        
        .prose td {
            padding: 0.75em 1em;
            border-bottom: 1px solid #E5E7EB;
        }
        
        .prose tbody tr:hover { background-color: #F9FAFB; }
        
        /* Prose size variants */
        .prose-sm { font-size: 0.875rem; }
        .prose-lg { font-size: 1.125rem; }
        
        .prose-lg h1 { font-size: 2.5rem; }
        .prose-lg h2 { font-size: 2rem; }
        .prose-lg h3 { font-size: 1.75rem; }
        .prose-lg h4 { font-size: 1.375rem; }
        
        .prose-xl { font-size: 1.25rem; }
        
        /* Prose color variants for dark backgrounds */
        .prose-invert { color: #D1D5DB; }
        
        .prose-invert h1, .prose-invert h2, .prose-invert h3,
        .prose-invert h4, .prose-invert h5, .prose-invert h6 {
            color: white;
        }
        
        .prose-invert strong, .prose-invert b { color: white; }
        .prose-invert a { color: #ffd700; }
        .prose-invert a:hover { color: #f6c401; }
        
        .prose-invert blockquote {
            border-left-color: #ffd700;
            background-color: rgba(255, 255, 255, 0.05);
        }
        
        .prose-invert hr { border-top-color: #374151; }
        
        /* Max width utility */
        .prose.max-w-none { max-width: none; }
    </style>
    
    {% block extra_css %}{% endblock %}
</head>
