{# MC Castellazzo - Events Page Template (Modern) #}
{% extends "website/base.jinja2" %}
{% from "website/includes/gold_title.jinja2" import gold_title %}

{% block title %}{{ page.title|replace('**', '') }}{% endblock %}

{% block content %}
<!-- Header Section -->
<header class="pt-32 pb-16 bg-navy">
    <div class="max-w-7xl mx-auto px-6">
        <nav aria-label="Breadcrumb" class="mb-8">
            <ol class="flex items-center gap-2 text-sm text-gray-400">
                {# Breadcrumb dinamico usando Wagtail #}
                {% for ancestor in page.get_ancestors(inclusive=False)[1:] %}
                <li><a href="{{ ancestor.url }}" class="hover:text-gold transition">{{ ancestor.title }}</a></li>
                <li><i class="fas fa-chevron-right text-xs" aria-hidden="true"></i></li>
                {% endfor %}
                <li aria-current="page" class="text-gold">{{ page.title|replace('**', '') }}</li>
            </ol>
        </nav>
        
        <h1 class="text-4xl md:text-6xl font-heading font-black text-white mb-6" data-aos="fade-up">
            {{ gold_title(page.title) }}
        </h1>
        {% if page.intro %}
        <p class="text-xl text-gray-300" data-aos="fade-up" data-aos-delay="100">
            {{ page.intro|striptags }}
        </p>
        {% endif %}
    </div>
</header>

<main id="main-content" role="main">
    {% if page.featured_event %}
    <!-- Featured Event -->
    <section class="py-16 bg-white" aria-labelledby="featured-heading">
        <div class="max-w-7xl mx-auto px-6">
            <div class="bg-warm-gray rounded-3xl overflow-hidden" data-aos="fade-up">
                <div class="grid lg:grid-cols-2">
                    <div class="p-8 md:p-12 flex flex-col justify-center">
                        <span class="inline-block bg-amaranth text-white px-4 py-2 rounded-full text-sm font-bold mb-6 w-fit">
                            <i class="fas fa-star mr-2" aria-hidden="true"></i> {{ _("EVENTO IN EVIDENZA") }}
                        </span>
                        <h2 id="featured-heading" class="text-3xl md:text-4xl font-heading font-black text-navy mb-4">
                            {{ page.featured_event.event_name }}
                        </h2>
                        {% if page.featured_event.description %}
                        <p class="text-gray-600 mb-6 leading-relaxed">
                            {{ page.featured_event.description|striptags|truncate(200) }}
                        </p>
                        {% endif %}
                        
                        <div class="flex flex-wrap gap-4 mb-8">
                            <div class="flex items-center gap-2 text-gray-600">
                                <i class="fas fa-calendar text-gold" aria-hidden="true"></i>
                                <span>{{ localtime(page.featured_event.start_date).strftime('%d %B %Y') }}</span>
                            </div>
                            <div class="flex items-center gap-2 text-gray-600">
                                <i class="fas fa-map-marker-alt text-amaranth" aria-hidden="true"></i>
                                <span>{{ page.featured_event.location_name }}</span>
                            </div>
                        </div>
                        
                        <a href="{{ page.featured_event.url }}" class="inline-flex items-center gap-3 bg-gold text-navy font-bold px-8 py-4 rounded-full hover:bg-gold-dark transition w-fit">
                            <i class="fas fa-info-circle" aria-hidden="true"></i>
                            <span>{{ _("Scopri di pi√π") }}</span>
                        </a>
                    </div>
                    <div class="h-64 lg:h-auto bg-navy">
                        {% if page.featured_event.image %}
                        <img src="{{ image(page.featured_event.image, 'fill-800x600').url }}" 
                             alt="{{ page.featured_event.event_name }}" 
                             class="w-full h-full object-cover opacity-90">
                        {% else %}
                        <div class="w-full h-full flex items-center justify-center bg-gradient-to-br from-navy to-navy-light">
                            <i class="fas fa-motorcycle text-6xl text-gold/50" aria-hidden="true"></i>
                        </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </section>
    {% endif %}

    <!-- Upcoming Events -->
    <section class="py-16 bg-cream" aria-labelledby="upcoming-heading">
        <div class="max-w-7xl mx-auto px-6">
            <div class="text-center mb-12" data-aos="fade-up">
                <span class="text-amaranth font-bold text-sm uppercase tracking-widest">{{ _("Calendario") }}</span>
                <h2 id="upcoming-heading" class="text-3xl md:text-4xl font-heading font-black text-navy mt-4">{{ _("Prossimi Eventi") }}</h2>
            </div>
            
            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
                {% for event in page.get_upcoming_events() %}
                <article class="bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-xl transition-shadow duration-300" 
                         data-aos="fade-up" data-aos-delay="{{ loop.index * 100 }}">
                    <a href="{{ event.url }}" class="block group">
                        {% if event.image %}
                        <div class="h-48 overflow-hidden">
                            <img src="{{ image(event.image, 'fill-400x300').url }}" 
                                 alt="{{ event.event_name }}"
                                 class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500">
                        </div>
                        {% endif %}
                        <div class="p-6">
                            <div class="flex items-center gap-4 mb-4">
                                <div class="w-16 h-16 bg-gold rounded-xl flex flex-col items-center justify-center shrink-0">
                                    <span class="text-navy text-xl font-black">{{ localtime(event.start_date).strftime('%d') }}</span>
                                    <span class="text-navy text-xs font-bold uppercase">{{ localtime(event.start_date).strftime('%b') }}</span>
                                </div>
                                <div>
                                    <span class="inline-block 
                                        {% if event.event_status == 'EventScheduled' %}bg-green-100 text-green-700
                                        {% elif event.event_status == 'EventCancelled' %}bg-red-100 text-red-700
                                        {% elif event.event_status == 'EventPostponed' %}bg-yellow-100 text-yellow-700
                                        {% else %}bg-gray-100 text-gray-700{% endif %} 
                                        px-3 py-1 rounded-full text-xs font-bold mb-1">
                                        {% if event.event_status == 'EventScheduled' %}{{ _("Programmato") }}
                                        {% elif event.event_status == 'EventCancelled' %}{{ _("Annullato") }}
                                        {% elif event.event_status == 'EventPostponed' %}{{ _("Posticipato") }}
                                        {% else %}{{ event.event_status }}{% endif %}
                                    </span>
                                    <h3 class="text-lg font-heading font-bold text-navy group-hover:text-amaranth transition-colors">{{ event.event_name }}</h3>
                                </div>
                            </div>
                            <div class="flex items-center gap-2 text-gray-500 text-sm">
                                <i class="fas fa-map-marker-alt text-amaranth" aria-hidden="true"></i>
                                <span>{{ event.location_name }}</span>
                            </div>
                        </div>
                    </a>
                </article>
                {% else %}
                <div class="col-span-full text-center py-12 bg-white rounded-2xl">
                    <i class="fas fa-calendar-times text-4xl text-gray-300 mb-4" aria-hidden="true"></i>
                    <p class="text-gray-600 mb-6">{{ _("Nessun evento in programma al momento.") }}</p>
                </div>
                {% endfor %}
            </div>
        </div>
    </section>
    
    <!-- Archivio Storico -->
    <section class="py-12 bg-white">
        <div class="max-w-7xl mx-auto px-6 text-center">
            <a href="{{ main_pages.events_archive or '/archivio-eventi/' }}" class="inline-flex items-center gap-3 bg-navy text-white font-bold px-8 py-4 rounded-full hover:bg-amaranth transition">
                <i class="fas fa-history" aria-hidden="true"></i>
                {{ _("Archivio storico eventi") }}
                <i class="fas fa-arrow-right" aria-hidden="true"></i>
            </a>
        </div>
    </section>
</main>

{# Hero con Countdown se configurato #}
{% if page.hero %}
    {% for block in page.hero %}
        {% include_block block %}
    {% endfor %}
{% endif %}

{% endblock %}
