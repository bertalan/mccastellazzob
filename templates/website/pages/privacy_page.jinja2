{# MC Castellazzo - Privacy Policy Page Template #}
{% extends "website/base.jinja2" %}
{% from "website/includes/gold_title.jinja2" import gold_title %}

{% block title %}{{ page.title|replace('**', '') }}{% endblock %}

{% block content %}
{# Hero Section #}
<header class="pt-32 pb-16 bg-navy" role="banner">
    <div class="max-w-7xl mx-auto px-6">
        {# Breadcrumb #}
        <nav aria-label="Breadcrumb" class="mb-8">
            <ol class="flex items-center gap-2 text-sm text-gray-400">
                {% for ancestor in page.get_ancestors(inclusive=False)[1:] %}
                <li><a href="{{ ancestor.url }}" class="hover:text-gold transition">{{ ancestor.title }}</a></li>
                <li><i class="fas fa-chevron-right text-xs" aria-hidden="true"></i></li>
                {% endfor %}
                <li aria-current="page" class="text-gold">{{ page.title|replace('**', '') }}</li>
            </ol>
        </nav>
        
        <h1 class="text-4xl md:text-6xl font-heading font-black text-white mb-6" data-aos="fade-up">
            {{ gold_title(page.title) }}
        </h1>
        
        {% if page.intro %}
        <div class="text-xl text-gray-300 max-w-3xl" data-aos="fade-up" data-aos-delay="100">
            {{ page.intro|safe }}
        </div>
        {% endif %}
    </div>
</header>

<main id="main-content" role="main">
    <section class="py-16 bg-cream">
        <div class="max-w-4xl mx-auto px-6">
            {# Body Content #}
            {% if page.body %}
            <div class="prose prose-lg max-w-none bg-white rounded-2xl shadow-lg p-8" data-aos="fade-up">
                {{ page.body|safe }}
            </div>
            {% else %}
            <div class="bg-white rounded-2xl p-8 shadow-lg" data-aos="fade-up">
                <p class="text-gray-600 text-center">
                    {{ _("Contenuto in fase di aggiornamento.") }}
                </p>
            </div>
            {% endif %}

            {# Back to home #}
            <div class="mt-12 text-center" data-aos="fade-up" data-aos-delay="100">
                <a href="{{ main_pages.home or '/' }}" 
                   class="inline-flex items-center gap-2 text-navy hover:text-gold transition font-semibold">
                    <i class="fas fa-arrow-left" aria-hidden="true"></i>
                    <span>{{ _("Torna alla Home") }}</span>
                </a>
            </div>
        </div>
    </section>
</main>
{% endblock %}
