{# MC Castellazzo - Board Page Template (Consiglio Direttivo) #}
{% extends "website/base.jinja2" %}
{% from "website/includes/gold_title.jinja2" import gold_title %}

{% block content %}
    {# Hero Section #}
    <header class="pt-32 pb-16 bg-navy">
        <div class="max-w-7xl mx-auto px-6">
            <nav aria-label="Breadcrumb" class="mb-8">
                <ol class="flex items-center gap-2 text-sm text-gray-400">
                    {# Breadcrumb dinamico usando Wagtail #}
                    {% for ancestor in page.get_ancestors(inclusive=False)[1:] %}
                    <li><a href="{{ ancestor.url }}" class="hover:text-gold transition">{{ ancestor.title }}</a></li>
                    <li><i class="fas fa-chevron-right text-xs" aria-hidden="true"></i></li>
                    {% endfor %}
                    <li aria-current="page" class="text-gold">{{ page.title|replace('**', '') }}</li>
                </ol>
            </nav>
            
            <h1 class="text-4xl md:text-6xl font-heading font-black text-white mb-6" data-aos="fade-up">
                {{ gold_title(page.title) }}
            </h1>
            {% if page.intro %}
            <div class="text-xl text-gray-300" data-aos="fade-up" data-aos-delay="100">
                {{ page.intro|safe }}
            </div>
            {% endif %}
        </div>
    </header>

    <main id="main-content" role="main">
        {# Council Members Section #}
        <section class="py-20 bg-white" aria-labelledby="members-heading">
            <div class="max-w-7xl mx-auto px-6">
                <div class="text-center mb-16" data-aos="fade-up">
                    <span class="text-amaranth font-bold text-sm uppercase tracking-widest">{{ _("Il Team") }}</span>
                    <h2 id="members-heading" class="text-3xl md:text-5xl font-heading font-black text-navy mt-4">{{ _("I Nostri Membri") }}</h2>
                    <p class="text-gray-600 mt-4 max-w-2xl mx-auto">{{ _("Conosci le persone che dedicano tempo e passione alla gestione del club") }}</p>
                </div>
                
                <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
                    {% for member in page.get_members_list() %}
                    {% set is_president = loop.index == 1 %}
                    {% set colors = ['navy', 'amaranth', 'navy', 'gold', 'amaranth', 'navy', 'amaranth'] %}
                    {% set bg_color = colors[(loop.index0) % 7] %}
                    
                    <article class="bg-white rounded-2xl shadow-lg overflow-hidden member-card {{ 'border-2 border-gold' if is_president else '' }}" 
                             data-aos="fade-up" 
                             data-aos-delay="{{ loop.index * 100 }}">
                        <div class="h-64 bg-{{ bg_color }} relative overflow-hidden">
                            {% if member.image %}
                            <img src="{{ image(member.image, 'fill-400x400').url }}" 
                                 alt="{{ member.name }}" 
                                 class="w-full h-full object-cover opacity-80 notranslate" translate="no">
                            {% else %}
                            <div class="w-full h-full flex items-center justify-center">
                                <span class="text-8xl font-heading font-bold {{ 'text-gold' if bg_color == 'navy' else 'text-white' }} opacity-50 notranslate" translate="no">
                                    {{ member.name[0]|upper }}
                                </span>
                            </div>
                            {% endif %}
                            <div class="absolute top-4 left-4">
                                {% if is_president %}
                                <span class="bg-gold text-navy px-4 py-2 rounded-full text-sm font-bold">{{ member.role }}</span>
                                {% elif bg_color == 'amaranth' %}
                                <span class="bg-white text-amaranth px-4 py-2 rounded-full text-sm font-bold">{{ member.role }}</span>
                                {% elif bg_color == 'gold' %}
                                <span class="bg-navy text-white px-4 py-2 rounded-full text-sm font-bold">{{ member.role }}</span>
                                {% else %}
                                <span class="bg-gold text-navy px-4 py-2 rounded-full text-sm font-bold">{{ member.role }}</span>
                                {% endif %}
                            </div>
                        </div>
                        <div class="p-6">
                            <h3 class="text-2xl font-heading font-bold text-navy mb-2 notranslate" translate="no">{{ member.name }}</h3>
                            {% if member.bio %}
                            <div class="text-gray-600 mb-4">
                                {{ member.bio|safe }}
                            </div>
                            {% endif %}
                        </div>
                    </article>
                    {% else %}
                    <div class="col-span-full text-center py-12">
                        <i class="fas fa-users text-6xl text-gray-300 mb-4" aria-hidden="true"></i>
                        <p class="text-gray-500">{{ _("Nessun membro disponibile.") }}</p>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </section>

        {# Join Section #}
        <section class="py-20 bg-cream" aria-labelledby="join-heading">
            <div class="max-w-7xl mx-auto px-6">
                <div class="bg-white rounded-3xl p-8 md:p-12 shadow-lg" data-aos="fade-up">
                    <div class="grid lg:grid-cols-2 gap-12 items-center">
                        <div>
                            <span class="text-amaranth font-bold text-sm uppercase tracking-widest">{{ _("Vuoi Contribuire?") }}</span>
                            <h2 id="join-heading" class="text-3xl md:text-4xl font-heading font-black text-navy mt-4 mb-6">
                                {{ _("Metti le Tue Idee al Servizio del Club") }}
                            </h2>
                            <p class="text-gray-600 mb-8">
                                {{ _("Il nostro consiglio Ã¨ sempre aperto a nuove idee e proposte. Se vuoi contribuire attivamente alla vita del club, partecipa alle nostre riunioni o candidati per il prossimo mandato.") }}
                            </p>
                            <div class="flex flex-wrap gap-4">
                                <a href="{{ main_pages.contact or page.get_parent().url }}" 
                                   class="bg-bordeaux text-white font-bold px-8 py-4 rounded-full hover:bg-gold-dark hover:text-navy transition inline-flex items-center gap-2">
                                    <i class="fas fa-envelope" aria-hidden="true"></i>
                                    {{ _("Contattaci") }}
                                </a>
                                <a href="{{ main_pages.events or '/' }}" 
                                   class="border-2 border-navy text-navy font-bold px-8 py-4 rounded-full hover:bg-navy hover:text-white transition inline-flex items-center gap-2">
                                    <i class="fas fa-calendar" aria-hidden="true"></i>
                                    {{ _("Prossime Riunioni") }}
                                </a>
                            </div>
                        </div>
                        <div class="hidden lg:block">
                            <div class="bg-navy rounded-2xl p-8 text-center">
                                <i class="fas fa-handshake text-6xl text-gold mb-6" aria-hidden="true"></i>
                                <h3 class="text-2xl font-heading font-bold text-white mb-4">{{ _("Assemblea Annuale") }}</h3>
                                <p class="text-gray-300 mb-6">{{ _("Il rinnovo del consiglio avviene ogni triennio durante l'assemblea dei soci") }}</p>
                                <div class="flex justify-center gap-8 text-center">
                                    <div>
                                        <span class="text-4xl font-black text-gold">{{ settings.website.SiteSettings.founding_year }}</span>
                                        <p class="text-gray-400 text-sm mt-1">{{ _("Fondazione") }}</p>
                                    </div>
                                    <div>
                                        <span class="text-4xl font-black text-gold">{{ now().year - settings.website.SiteSettings.founding_year }}</span>
                                        <p class="text-gray-400 text-sm mt-1">{{ _("Anni di Storia") }}</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>

<style>
    .member-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    .member-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 20px 40px rgba(27, 38, 59, 0.15);
    }
</style>
{% endblock %}
