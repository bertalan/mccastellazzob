   {{ gold_title(page.title) }} #}

{% macro gold_title(text) %}
{%- if text and '**' in text -%}
{%- set parts = text.split('**') -%}
{%- for part in parts -%}
{%- if loop.index is odd -%}{{ part }}{%- else -%}<span class="text-gold">{{ part }}</span>{%- endif -%}
{%- endfor -%}
{%- else -%}
{{ text }}
{%- endif -%}
{% endmacro %}
