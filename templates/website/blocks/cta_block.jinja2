{# Block: Call-to-Action #}
<section class="py-20 {{ value.background }}" aria-labelledby="cta-heading-{{ id }}">
    <div class="max-w-4xl mx-auto px-6 text-center">
        <h2 id="cta-heading-{{ id }}" class="text-4xl md:text-5xl font-heading font-black text-white mb-6" data-aos="fade-up">
            {% if value.title_highlight %}
            {{ value.title|replace(value.title_highlight, '<span class="text-gold">' ~ value.title_highlight ~ '</span>')|safe }}
            {% else %}
            {{ value.title }}
            {% endif %}
        </h2>
        
        {% if value.subtitle %}
        <p class="text-xl text-gray-300 mb-10 max-w-2xl mx-auto" data-aos="fade-up" data-aos-delay="100">
            {{ value.subtitle }}
        </p>
        {% endif %}
        
        <div class="flex flex-col sm:flex-row gap-6 justify-center" data-aos="fade-up" data-aos-delay="200">
            <a href="{{ value.cta_primary_link }}" 
               class="bg-gold text-navy font-bold px-10 py-5 rounded-full text-xl hover:bg-gold-dark transition flex items-center justify-center gap-3 shadow-lg">
                {% if value.cta_primary_icon %}
                <i class="{{ value.cta_primary_icon }}" aria-hidden="true"></i>
                {% endif %}
                <span>{{ value.cta_primary_text }}</span>
            </a>
            
            {% if value.cta_secondary_text and value.cta_secondary_link %}
            <a href="{{ value.cta_secondary_link }}" 
               class="border-2 border-white text-white font-bold px-10 py-5 rounded-full text-xl hover:bg-white/10 transition flex items-center justify-center gap-3">
                {% if value.cta_secondary_icon %}
                <i class="{{ value.cta_secondary_icon }}" aria-hidden="true"></i>
                {% endif %}
                <span>{{ value.cta_secondary_text }}</span>
            </a>
            {% endif %}
        </div>
    </div>
</section>
